<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btnAddFobia"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:fillViewport="true">
        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="false" />
    </ScrollView>

    <Button
        android:id="@+id/btnAddFobia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_fobia"
        android:layout_alignParentBottom="true"
        android:onClick="btnAddClick"/>
</RelativeLayout>
